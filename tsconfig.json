{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false
  },
  "files": [
    "./src/index.ts",
    "./src/readme.ts",
    "./src/publish.ts"
  ],
  "include": [
    "./src/recipes/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}